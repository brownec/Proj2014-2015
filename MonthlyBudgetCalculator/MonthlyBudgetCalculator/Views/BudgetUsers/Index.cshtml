@model IEnumerable<MonthlyBudgetCalculator.Models.BudgetUser>

@{
    ViewBag.Title = "Index";
}
<p>
    <br />
    <a class="btn btn-primary btn-xs" @Html.ActionLink("Home", "Index", "Home")</a>
</p>
<h5 class="text-info">Application Users</h5>
<h6>*Use <strong>Options</strong> to Edit, Delete or View User Profiles and add and check Budgets and Analysis</h6>

<table class="table" style="text-align:left">
    <tr>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.AddressLine1)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.AddressLine2)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.Town)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.Counties)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.PostCode)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Counties)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>

            <td>
                <div class="btn-group btn-sm">
                    <a class="btn btn-info" href="#">Options</a>
                    <a class="btn btn-info dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Add New Budget", "Create", "Budgets", new { id = item.BudgetUserId }, null)</li>
                        <li>@Html.ActionLink("My Saved Budgets", "Index", "Budgets", new { id = item.BudgetUserId }, null)</li>
                        <li>@Html.ActionLink("Budget Analysis Charts", "Charts", new { id = item.BudgetUserId })</li>
                        <li>@Html.ActionLink("User Profile", "Details", new { id = item.BudgetUserId })</li>
                        <li>@Html.ActionLink("Edit User Profile", "Edit", new { id = item.BudgetUserId })</li>
                        <li>@Html.ActionLink("Delete User", "Delete", new { id = item.BudgetUserId })</li>
                    </ul>
                </div>
            </td>
        </tr>
    }
</table>