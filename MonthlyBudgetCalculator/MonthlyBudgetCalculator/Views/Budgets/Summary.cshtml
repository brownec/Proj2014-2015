            <td><i class="glyphicon glyphicon-plus"> Car Expenditure</i></td>
            <td></td>
            <td></td>
        </tr>
        <tr class="collapse carExpenses">
            <td>Car Tax</td>
            <td>0.00</td>
            <td>@ViewBag.CarTaxAmount</td>
        </tr>
        <tr class="collapse carExpenses">
            <td>Car Insurance</td>
            <td>0.00</td>
            <td>@ViewBag.CarInsuranceAmount</td>
        </tr>
